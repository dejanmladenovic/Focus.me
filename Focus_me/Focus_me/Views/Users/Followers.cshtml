
@{
    ViewBag.Title = "Followers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Followers</h2>


<input type="button" class="btn btn-link" onclick="showPopUp()" value="Followers" />
<div id="divContaiPopup"  class="table-responsive" style="display:none">
    <div>
        <table class="table table-striped table-hover">
            <tr>
                <td>ID</td>
                <td>User</td>
            </tr>
            @for (int i = 0; i < 5; i++)
            {
                <tr>
                    <td>@(i + 1)</td>
                    <td>Followers  @i</td>
                </tr>
            }
        </table>
    </div>
</div>

<script type="text/javascript">
    function showPopUp() {
        $("#divContaiPopup").dialog(
            {
                height: 400,
                width: 500,
                modal: true,
                buttons: {
                    "OK": function () {
                        $(this).dialog("close");
                        alert("Zatvaram...")
                    },
                    "Cancel": function () {
                        $(this).dialog("close");
                    }
                }
            });
    }
</script>